<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pole tekstowe do edycji zawartości pliku -->
    <EditText
        android:id="@+id/editTextFileContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Treść pliku"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <!-- Tekst do wyświetlania ścieżki pliku -->
    <TextView
        android:id="@+id/textViewFilePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brak pliku"
        android:textStyle="bold"
        android:padding="8dp" />

    <!-- Przycisk do otwierania pliku -->
    <Button
        android:id="@+id/buttonOpenFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otwórz plik" />

    <!-- Przycisk do zapisywania pliku -->
    <Button
        android:id="@+id/buttonSaveFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zapisz plik" />

</LinearLayout>